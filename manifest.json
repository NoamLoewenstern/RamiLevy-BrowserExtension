{
  "manifest_version": 3,
  "name": "Rami Levi Online Helper",
  "version": "1.0.0",
  "action": {
    "default_title": "Popup",
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "48": "logo192.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.rami-levy.co.il/*"
      ],
      "js": [
        "src/contentScript/content.ts"
      ],
      "css": [
        "src/contentScript/index.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/contentScript/index.css",
        "logo192.png",
        "src/assets/logo192.png"
      ],
      "matches": [
        "https://www.rami-levy.co.il/*"
      ]
    }
  ],
  "content_security_policy": {},
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "service_worker": "src/backgroundScripts/background.ts",
    "persistent": true
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://www.rami-levy.co.il/",
    "https://www.rami-levy.co.il/*"
  ]
}